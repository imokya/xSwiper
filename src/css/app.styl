/*-- app --*/
#app 
  height: 100%;

.dialog 
  width: 750px;
  height: 100%;

/*--- swiper --*/
.swiper-container 
  height: 100%;

.swiper-wrapper 
  height: 100%;

.swiper-slide 
  height: 100%;
  & > div 
    height: 100%;
  

/*-- headup --*/
.headup 
  width: 750px;
  position: absolute;
  z-index: 10;
  top: 0;
  .headup-music
    position: absolute;
    width: 59px;
    height: 55px;
    top: 30px;
    right: 30px;
    background: url('~img/music-on.png') center center no-repeat;
    &.off
      background: url('~img/music-off.png') center center no-repeat;

/*-- loading dialog --*/
.dialog-loading 
  display: flex;
  justify-content: center;
  align-items: center;

/*-- spinner --*/
.spinner
  position: relative;
  box-sizing: border-box;
  display: block;
  font-size: 0;
  color: #fff;
  width: 50px;
  height: 50px;
  &::after 
    content: '';
    width: 50px;
    height: 50px;
    display: block;
    position: relative;
    box-sizing: border-box;
    background: transparent;
    border: 4px solid #fff;
    border-bottom-color: transparent;
    border-radius: 100%;
    animation: ball-clip-rotate .75s linear infinite;
    
@-webkit-keyframes ball-clip-rotate 
  0% 
    transform: rotate(0deg);
  50% 
    transform: rotate(180deg);
  100% 
    transform: rotate(360deg);
  
